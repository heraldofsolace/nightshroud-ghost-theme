<nav class="pagination section">
	<div class="nav">
		{{#if prev}}
			<a class="prev button m-2" href="{{page_url prev}}">{{t "Previous" }}</a>
		{{/if}}
		<span class="page-number m-2">{{t "Page" }} {{page}} {{t "of"}} {{pages}}</span>
		{{#if next}}
			<a class="next button m-2" href="{{page_url next}}">{{t "Next" }}</a>
		{{/if}}
	</div>
</nav>