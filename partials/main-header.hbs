<header class="main-header mb-4" id="main-header">
  <div class="nav">
    <div class="p-1 md:p-8">
      {{#if @site.logo}}
      <a class="md:absolute md:top-0 md:left-0 md:m-4 w-40 mx-auto my-4 block" href="{{@site.url}}">
        <img class="w-40 lazy" data-src="{{@site.logo}}" alt="{{@site.title}} Logo" />
      </a>

      {{/if}}


      <h1 class="main-header__blog-title text-6xl">
        <a class="heading-link" href="{{@site.url}}">{{@site.title}}</a>
      </h1>
      <h3 class="main-header__blog-description text-foreground-dark-1">
        {{@site.description}}
      </h3>

    </div>
    <nav class="w-full align-center text-title mt-2 text-md">
      {{navigation}}
    </nav>

    {{> notification }}
  </div>
</header>